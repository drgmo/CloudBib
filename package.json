{
  "name": "cloudbib",
  "version": "0.1.0",
  "description": "A standalone reference manager with group collaboration and Google Drive as the PDF storage layer",
  "main": "dist/electron/main.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:all": "npm run build && npm run build:electron && npm run build:renderer",
    "start": "npm run build:all && electron dist/electron/main.js",
    "electron-build": "npm run build:all && electron-builder",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "keywords": ["reference-manager", "citation", "google-drive", "bibtex", "csl"],
  "license": "MIT",
  "build": {
    "appId": "com.cloudbib.app",
    "productName": "CloudBib",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "pdfjs-dist": "^4.2.67",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  }
}
